.portfolio
    background-color #f7f7f7
    padding 120px 0 145px 0

.portfolio-title
    text-transform uppercase
    margin-bottom 10px

.portfolio-subtitle
    margin-bottom 89px
    font-size(24px)
    text-align center
    color #333

.portfolio-filter
    max-width 435px
    margin 0 auto 76px auto

.portfolio-filter__select-category
    margin-right 5px
    padding 10px 16px
    font-size(14px)
    line-height 1
    color #666
    border-radius 2px
    border 1px solid #cccccc
    background-color transparent
    cursor pointer
    transition 0.5s ease-in-out

    &--active
        background-color #f1f1f1

    &:last-child
        margin-right 0

    &:hover
        background-color #f1f1f1

    &:focus
        outline none

.portfolio-box
    display grid
    grid-template-columns repeat(2, 300px 20px) 300px
    grid-template-rows 240px
    grid-row-gap 30px
    margin-bottom 70px
    padding 0 10px

.portfolio-box-item
    width 300px
    height 240px

    p
        font-size(14px)
        text-align center
        color #333

    &--position-1
        grid-column 1 / 2

    &--position-2
        grid-column 3 / 4
    
    &--position-3
        grid-column 5 / 6

    &--position-4
        grid-row 2 / 3
        grid-column 1 / 2

    &--position-5
        grid-row 2 / 3
        grid-column 3 / 4
    
    &--position-6
        grid-row 2 / 3
        grid-column 5 / 6

.portfolio-box-item-img
    position relative
    width 300px
    height 160px
    overflow hidden
    margin-bottom 25px

    img 
        width 100%
        height auto

    &:hover .portfolio-box-item-img-overlay
        animation-name slideInDown
        animation-duration 1s
        animation-fill-mode forwards

.portfolio-box-item-img-overlay
    display flex
    justify-content center
    align-items center
    height 100%
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    background-color rgba(0, 0, 0, 0.8)
    transform: translateY(-100%)

    &__button
        border none 
        background-color transparent
        font-family 'Lato', sans-serif
        font-size(18px)
        color #b1afad
        margin-right 5px
        transition 0.5s ease-in-out
        cursor pointer

        &:focus
            outline none

        &:hover
            color #00ccff

    &__link
        display inline-block
        padding 1px 6px
        font-size(18px)
        color #b1afad
        transition 0.5s ease-in-out

        &:hover
            color #00ccff

.portfolio-box-item__title
    margin-bottom 8px
    font-size(16px)
    font-weight bold
    text-align center
    color #333

.portfolio-button-wrapper
    display flex
    justify-content center

.portfolio-button-load
    background-color #00ccff
    border none
    font-family 'Lato', sans-serif
    font-size(14px)
    line-height 1
    text-transform uppercase
    color #fff
    cursor pointer
    transition 0.5s ease-in-out
    padding 9.5px 29.76px

    &:hover
        background-color #81e6ff

    &:active
        background-color #0dbce8

    &:focus
        outline none 
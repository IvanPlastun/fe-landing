.portfolio
    background-color #f7f7f7
    padding 40px 0 60px 0

    @media (min-width 768px)
        padding 90px 0

    @media (min-width: 992px)
        padding 125px 0 145px 0

.portfolio-title
    text-transform uppercase
    margin-bottom 10px

.portfolio-subtitle
    margin-bottom 60px
    font-size(20px)
    text-align center
    color #333

    @media (min-width: 768px)
        font-size(24px)
        margin-bottom 89px

.portfolio-filter
    max-width 435px
    margin 0 auto 50px auto

    @media (min-width: 768px)
        margin 0 auto 76px auto

.portfolio-filter__select-category
    margin-right 15px
    padding 9px 16px
    font-size(14px)
    line-height 1
    color #666
    border-radius 2px
    border 1px solid #cccccc
    background-color transparent
    cursor pointer
    transition 0.5s ease-in-out

    &:last-child
        margin-right 0

    &:hover
        background-color #f1f1f1

    &:focus
        outline none

    &:nth-child(-n + 3)
        margin-bottom 15px

    @media (min-width: 576px)
        margin-right 5px

        &:nth-child(-n + 3)
            margin-bottom 0

.portfolio-filter__select-category.active
    background-color #f1f1f1

.portfolio-box
    display flex
    flex-flow row wrap
    justify-content space-between
    margin-bottom 50px

    @media (min-width: 992px)
        padding 0 10px
        margin-bottom 70px

.portfolio-box-item
    width 100%
    height 240px
    margin-bottom 30px

    &:last-child
        margin-bottom 0

    p
        font-size(14px)
        text-align center
        color #333

    @media (min-width: 576px)
        width 240px

        &:nth-last-child(-n + 2)
            margin-bottom 0

    @media (min-width: 768px)
        width: 330px

    @media (min-width: 992px)
        width 300px

        &:nth-last-child(-n + 3)
            margin-bottom 0

.portfolio-box-item.active
    animation-name: flipInX
    animation-duration: 1s
    display block

.portfolio-box-item.hide
    animation-name: flipOutX
    animation-duration: 1s
    display none

.portfolio-box-item-img
    position relative
    width 100%
    height 160px
    overflow hidden
    margin-bottom 25px

    img 
        width 100%
        height auto

        @media (min-width: 576px)
            height 100%

        @media (min-width: 768px)
            height auto

    &:hover .portfolio-box-item-img-overlay
        transform: translateY(0)

.portfolio-box-item-img-overlay
    display flex
    justify-content center
    align-items center
    height 100%
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    background-color rgba(0, 0, 0, 0.8)
    transform: translateY(-100%)
    transition 0.5s ease-in-out

    &__button
        border none 
        background-color transparent
        font-family 'Lato', sans-serif
        font-size(18px)
        color #b1afad
        margin-right 5px
        transition 0.5s ease-in-out
        cursor pointer

        &:focus
            outline none

        &:hover
            color #00ccff

    &__link
        display inline-block
        padding 1px 6px
        font-size(18px)
        color #b1afad
        transition 0.5s ease-in-out

        &:hover
            color #00ccff

.portfolio-box-item__title
    margin-bottom 8px
    font-size(16px)
    font-weight bold
    text-align center
    color #333

.portfolio-button-wrapper
    display flex
    justify-content center

.portfolio-button-load
    background-color #00ccff
    border none
    font-family 'Lato', sans-serif
    font-size(14px)
    line-height 1
    text-transform uppercase
    color #fff
    cursor pointer
    transition 0.5s ease-in-out
    padding 9.5px 29.76px

    &:hover
        background-color #81e6ff

    &:active
        background-color #0dbce8

    &:focus
        outline none 
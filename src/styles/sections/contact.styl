.contact
    padding 172px 0 148px 0

.contact-top
    display flex
    margin 0 0 170px 0

.contact-top-lines
    margin 0 32px 0 60px

.contact-top-description
    align-self flex-end
    transform translateY(-30px)
    max-width 539px
    line-height 1.25
    text-align left
    color #666

.contact-wrapper
    display flex

.contact-feedback-form
    width 540px
    margin 0 30px 0 0
    flex-shrink 0

.contact-feedback-form-group
    display flex
    justify-content space-between
    margin 0 0 12px 0

.contact-feedback-form__input-field
    width 100%
    padding 15px 0 15px 21px
    border-radius 4px
    border 1px solid #ccc
    background-color #fff

    
    &--size
        width 266px

    &::-webkit-input-placeholder
        color #ccc

.contact-feedback__message-box
    width 100%
    height 161px
    margin 12px 0 14px 0
    padding 15px 0 15px 21px
    border-radius 4px
    border 1px solid #ccc
    background-color #fff

    &::-webkit-input-placeholder
        color #ccc

.contact-feedback__submit
    padding 16px 24px
    background-color #00ccff
    border none
    border-radius 4px
    color #ffffff
    cursor pointer
    transition 0.3s ease-in

    &:hover
        background-color #44daff

    &:active
        background-color #2eaccc

    &:focus
        outline none

.contact-info__title
    font-size(16px)
    text-transform uppercase
    font-weight bold
    line-height 1
    color #333
    margin 0 0 17px 0

.contant-info-description
    margin 0 0 45px 0
    line-height 1.38
    color #666666

.contact-info-short-data
    line-height 1.38
    color #666

    p
        margin 0 0 12px 0

        &:last-child
            margin 0

.contact-info-short-data__icon
    display inline-block
    margin 0 24px 0 0
    font-size(24px)
    line-height 1
.contact
    padding 40px 0 60px 0

    @media (min-width: 992px)
        padding 172px 0 148px 0

.contact-top
    display flex
    flex-direction column
    margin 0 0 60px 0

    @media (min-width: 768px)
        flex-direction row
        margin 0 0 90px 0

    @media (min-width: 992px)
        margin 0 0 170px 0

.contact-top-lines
    margin 25px 0

    @media (min-width: 768px)
        margin 0 31px 0 60px

.contact-top-description
    color #666

    @media(min-width: 768px)
        transform translateY(-15px)

    @media(min-width: 992px)
        transform translateY(-30px)

.contact-wrapper
    display flex
    flex-direction column

    @media (min-width: 992px)
        flex-direction row

.contact-feedback-form
    max-width 540px
    margin 0 0 40px 0
    flex-shrink 0

    @media (min-width: 992px)
        margin 0 30px 0 0

.contact-feedback-form-group
    display flex
    flex-direction column
    margin 0 0 12px 0

    @media (min-width: 992px)
        flex-direction row
        justify-content space-between

.contact-feedback-form__input-field
    width 100%
    padding 15px 15px 15px 21px
    border-radius 4px
    border 1px solid #ccc
    background-color #fff
    
    &:first-child
        margin-bottom 12px

    &:focus
        outline none 
        border-color: #2eaccc

    &::-webkit-input-placeholder
        color #ccc

    @media (min-width: 992px)
        &--size
            width 266px
        
        &:first-child
            margin-bottom 0

.contact-feedback__message-box
    width 100%
    height 161px
    margin 12px 0 14px 0
    padding 15px 15px 15px 21px
    border-radius 4px
    border 1px solid #ccc
    background-color #fff
    resize vertical

    &:focus
        outline none 
        border-color: #2eaccc

    &::-webkit-input-placeholder
        color #ccc

.contact-feedback__submit
    padding 16px 24px
    background-color #00ccff
    border none
    border-radius 4px
    color #ffffff
    cursor pointer
    transition 0.3s ease-in

    &:hover
        background-color #44daff

    &:active
        background-color #2eaccc

    &:focus
        outline none

.contact-info__title
    font-size(16px)
    text-transform uppercase
    font-weight bold
    line-height 1
    color #333
    margin 0 0 17px 0

.contant-info-description
    margin 0 0 35px 0
    line-height 1.38
    color #666666

    @media (min-width: 992px)
        margin 0 0 45px 0

.contact-info-address
    line-height 1.38
    font-style normal
    color #666

    p
        margin 0 0 12px 0
        font-size(14px)

        @media (min-width: 576px)
            font-size(16px)

        &:last-child
            margin 0

.contact-info-address__icon
    display inline-block
    margin 0 20px 0 0
    font-size(24px)
    line-height 1

    @media (min-width: 576px)
        margin 0 24px 0 0
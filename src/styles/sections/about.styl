.about
    padding 40px 0 60px 0

    @media(min-width: 768px)
        padding 80px 0 100px 0

    @media(min-width: 992px)
        padding 114px 0 130px 0

.about-top
    display flex
    flex-direction column
    margin-bottom 45px

    @media(min-width: 768px)
        flex-direction row
        margin-bottom 79px

.about-description
    max-width 539px
    font-size(16px)
    line-height 1.25
    letter-spacing normal
    color #666666
    align-self flex-end

    @media(min-width: 768px)
        padding-bottom 15px

    @media(min-width: 992px)
        padding-bottom 30px

.about-lines
    margin 20px 0
    align-self center

    @media(min-width: 768px)
        margin 0 20px 0 49px
        align-self flex-start

    @media(min-width: 992px)
        margin 0 20px 0 79px

.about-buttons
    margin-bottom 58px

    @media(min-width: 768px)
        margin-bottom 98px

    @media(min-width: 992px)
        margin-left 10px

.about-buttons__button
    width 72px
    height 35px
    padding 0
    background-color #eaeaea
    border none
    font-family Lato, sans-serif
    font-size(11px)
    text-align center
    color #333
    border-right 1px solid rgba(255, 255, 255, 0.5)
    text-transform uppercase
    transform skew(-20deg)
    cursor pointer
    transition 0.5s ease-in

    @media(min-width: 576px)
        width 100px
        height 45px
        font-size(14px)

    @media(min-width: 768px)
        width 140px
        font-size(16px)

    @media(min-width: 992px)
        width 175px
        height 58px
        font-size(20px)

    &:last-child
        border-right none

    &:hover
        background-color #00ccff
        color #fff

.about-buttons__button--active
    background-color #00ccff
    color #fff

.about-features 
    display flex
    flex-flow row wrap

.about-features-box
    position relative
    display flex
    padding-top 25px
    padding-left 13px

    @media(min-width: 992px)
        padding-bottom 47px
        padding-right 30px
        padding-top 25px
        padding-left 0

        &:first-child::after
            position absolute
            left 0
            bottom 0
            content ''
            display block
            width 448px
            height 2px
            background-color #eaeaea

        &:first-child::before
            position absolute
            right 0
            top 0
            content ''
            display block
            height 165px
            width 2px
            background-color #eaeaea

        &:last-child::before
            position absolute
            top -1px
            left 15px
            content ''
            display block
            width 466px
            height 2px
            background-color #eaeaea

        &:last-child::after
            position absolute
            left 0
            bottom 0
            content ''
            display block
            height 165px
            width 2px
            background-color #eaeaea

        &:nth-child(even)
            padding-left 35px
        
        &:nth-child(odd)
            padding-left 10px

.about-features-box-icon
    width 98px
    height 85px
    font-size(52px)
    line-height 1.5
    text-align center
    color #ffffff
    background-color #eaeaea
    transform skew(-15deg)
    flex-shrink 0
    margin-right 20px
    transition 0.5s ease-in
    cursor pointer

    &:hover
        background-color #00ccff

    @media(min-width: 576px)
        width 122px
        height 105px
        font-size(69px)

.about-features-box-description
    color #999999
    
    @media(min-width: 992px)
        padding-top 9px

    p
        max-width 285px
        font-size(14px)
        
        @media(min-width: 576px)
            font-size(16px)

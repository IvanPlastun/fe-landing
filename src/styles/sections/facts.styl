.facts
    padding 40px 0px 60px 0
    background-color #f7f7f7

    @media (min-width: 768px)
        padding 80px 0 150px 0

    @media (min-width: 992px)
        padding 118px 0px 203px 0

.facts-title
    margin-bottom 41px
    text-transform uppercase

.facts-subtitle
    max-width 538px
    margin 0 auto 50px auto
    line-height 1.25
    text-align center
    color #666

    @media (min-width: 768px)
        margin 0 auto 74px auto

.facts-features
    display flex
    flex-direction column
    border 1px solid #ccc
    background-color #fff

    @media (min-width: 576px)
        flex-flow row wrap

.facts-features-box
    display flex
    flex-direction column
    justify-content center
    width 100%
    height 266px
    border-bottom 1px solid #ccc

    &:last-child
        border-bottom none

    @media (min-width: 576px)
        width 254px
        
        &:nth-child(2n - 1)
            border-right 1px solid #ccc

        &:nth-last-child(-n + 2)
            border-bottom none 

    @media (min-width: 768px)
        width 343px

    @media (min-width: 992px)
        width 239px
        border-right 1px solid #ccc
        border-bottom none 

        &:last-child
            border-right none

.facts-features-box__icon
    margin-bottom 35px
    font-size(70px)
    text-align center
    color #333

.facts-features-box__title
    margin-bottom 16px
    font-size(22px)
    line-height 1
    text-align center
    color #00ccff

.facts-features-box__number
    font-size(52px)
    line-height 1
    font-weight 300
    text-align center
    color #333
.footer-social
    padding 47px 0 37px 0
    text-align center
    background-color #2f2e2e

.footer-social__link
    font-size(25px)
    text-align center
    text-decoration none
    color #fff
    line-height 1
    margin 0 20px 0 0
    transition 0.5s ease-in-out

    &:last-child
        margin 0

    &:hover
        color #0cf

    @media (min-width: 576px)
        font-size(35px)
        margin 0 40px 0 0

.footer-copyright
    padding 27px 0 35px 0
    text-align center
    color #fff
    background-color #0cf

.footer-copyright__link
    text-decoration none
    color #0f91b1
    font-weight bold